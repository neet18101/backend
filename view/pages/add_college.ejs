<%- include('../common/header.ejs')%>

<div class="content-body">
  <div class="container-fluid">
    <!-- row -->
    <div class="row">
      <div class="col-xl-12 col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Add University/College</h4>
          </div>
          <div class="card-body">
            <div class="basic-form">
              <form
                method="post"
                action="/add-college"
                autocomplete="off"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="mb-3 col-md-6">
                    <label class="form-label">College Name</label>
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      placeholder="university name ...."
                    />
                  </div>
                  <div class="mb-3 col-md-6">
                    <label class="form-label">College Location</label>
                    <input
                      type="text"
                      name="location"
                      class="form-control"
                      placeholder="university location ...."
                    />
                  </div>
                  <div class="mb-3">
                    <label for="formFile" class="form-label"
                      >Image Upload</label
                    >
                    <input
                      class="form-control"
                      name="image"
                      type="file"
                      id="formFile"
                      required
                    />
                  </div>
                </div>

                <!-- <div class="mb-3">
                      <div class="form-check">
                          <input class="form-check-input" type="checkbox" />
                          <label class="form-check-label"> Make as Primary </label>
                      </div>
                      </div> -->
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xl-12 col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">All Universities</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-responsive-md">
                <thead>
                  <tr>
                    <th><strong>College Name</strong></th>
                    <th><strong>Location</strong></th>
                    <th><strong>Status</strong></th>
                    <th><strong></strong></th>
                  </tr>
                </thead>
                <tbody>
                  <%  data.forEach(collegeData => { %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <img
                          src="<%= collegeData.image %>"
                          class="rounded-lg me-2"
                          width="100"
                          alt=""
                        />
                        <span class="w-space-no"><%= collegeData.name %></span>
                      </div>
                    </td>
                    <td><%= collegeData.location %></td>
                  
                    <td>
                      <div class="d-flex align-items-center">
                        <i class="fa fa-circle text-success me-1"></i>
                        active
                      </div>
                    </td>
                    <td>
                      <div class="d-flex">
                        <a
                          href="#"
                          class="btn btn-primary shadow btn-xs sharp me-1"
                          ><i class="fa fa-pencil"></i
                        ></a>
                        <a href="#" class="btn btn-danger shadow btn-xs sharp"
                          ><i class="fa fa-trash"></i
                        ></a>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function formatDate(dateString) {
    const options = {
      year: "numeric",
      month: "long",
      day: "numeric",
    };
    const formattedDate = new Date(dateString).toLocaleDateString(
      "en-US",
      options
    );
    return formattedDate;
  }
  console.log(
    formatDate("Thu Dec 07 2023 22:09:13 GMT+0530 (India Standard Time")
  );
</script>

